
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Iniciar Sesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  
</head>
<body >
    <div class="container">
        @* mt5 pt5 *@
        <div class="m-0 vh-100 justify-content-center align-items-center">
        @* <div class="row justify-content-center"> *@
            <hr />
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                   <div class="card-header">
                       Iniciar Sesion
                   </div>
                    <div class="card-body justify-content-center align-items-center">
                       <form asp-controller="Home" asp-action="Inicio">
                         <div class="mb-2">
                             <label class="form-label-sm" id="lblUsuario" />
                             <input type="text" class="form-control form-control-sm" id="txtUsuario" name="UserName" />
                         </div>
                         <div class="mb-2">
                                <label class="form-label-sm" id="lblClave" />
                                <input type="password" class="form-control form-control-sm" id="pswClave" name="Clave" />
                         </div>
                        <div class="d-grid gap-2 mb-4">
                                <button  class="btn btn-primary" type="submit">Iniciar Sesion</button>
                        </div>
                            @if (ViewData["Message"] != null)
                            {
                                <div class="card-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Message"]
                                    </div>
                                </div>
                            }
                            No estas registrado?..<a href="@Url.Action("RegistrarUsuario","Home")">Registrate</a>
                        </form>
                   </div>
                  
     
                </div>
            </div>

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
